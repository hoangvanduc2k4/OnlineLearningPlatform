@page
@using X.PagedList
@using X.PagedList.Mvc.Core
@model OnlineLearningPlatform.Areas.Admin.Pages.Categories.IndexModel
@{
    ViewData["Title"] = "Category Management";
    Layout = "~/Areas/Admin/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid mt-4">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-light text-primary d-flex justify-content-between align-items-center">
            <form method="get" class="d-flex me-2">
                <input type="text" name="searchTerm" value="@Model.SearchTerm" class="form-control form-control-sm me-2" placeholder="Search Category..." />
                <button type="submit" class="btn btn-sm btn-outline-primary">Search</button>
            </form>
            <a asp-page="./Create" class="btn btn-sm btn-success"><i class="bi bi-plus-lg"></i> Add New Category</a>
        </div>
        <div class="card-body">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-striped table-hover mb-0">
                    <thead class="bg-light text-dark">
                        <tr>
                            <th style="width: 5%;">ID</th>
                            <th style="width: 40%;">Category Name</th>
                            <th style="width: 15%;">Status</th>
                            <th style="width: 15%;">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Categories != null && Model.Categories.Any())
                        {
                            int seq = (Model.Categories.PageNumber - 1) * Model.Categories.PageSize;
                            foreach (var category in Model.Categories)
                            {
                                seq++;
                                <tr>
                                    <td>@seq</td>
                                    <td>@category.CategoryName</td>
                                    <td>
                                        <span class="badge @(category.IsDeleted ? "text-danger" : "text-success")">
                                            @(category.IsDeleted ? "Deleted" : "Active")
                                        </span>
                                    </td>
                                    <td>
                                        <a asp-page="./Update" asp-route-id="@category.CategoryId" class="btn btn-sm btn-warning me-1">
                                            <i class="bi bi-pencil-fill"></i>
                                        </a>
                                        <form method="post" asp-page-handler="Delete" class="d-inline">
                                            <input type="hidden" name="id" value="@category.CategoryId" />
                                            <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this?')">
                                                <i class="bi bi-trash-fill"></i>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="4" class="text-center py-3 text-muted">No Categories found.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer bg-white">
            <nav aria-label="Page navigation" class="d-flex justify-content-center">
                @Html.PagedListPager(Model.Categories, page => Url.Page("./Index", new { pageNumber = page, pageSize = Model.PageSize, searchTerm = Model.SearchTerm }),
                         new PagedListRenderOptions
                {
                    UlElementClasses = new[] { "pagination pagination-sm mb-0" },
                    LiElementClasses = new[] { "page-item" },
                    PageClasses = new[] { "page-link text-primary" }
                })
            </nav>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function showSuccess(msg) {
            iziToast.success({
                title: 'Success',
                message: msg,
                backgroundColor: '#d4edda',
                titleColor: '#155724',
                messageColor: '#155724',
                position: 'topRight'
            });
        }

        function showError(msg) {
            iziToast.error({
                title: 'Error',
                message: msg,
                backgroundColor: '#f8d7da',
                titleColor: '#721c24',
                messageColor: '#721c24',
                position: 'topRight'
            });
        }

    </script>
}