@using Microsoft.AspNetCore.Identity
@using OnlineLearningPlatform.Models.Entities.UserPart
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

@if (SignInManager.IsSignedIn(User))
{
    var user = await UserManager.GetUserAsync(User);
    var avatarUrl = user?.AvatarUrl ?? "~/img/person/person-f-1.webp";
    var userName = user?.FullName ?? user?.Email ?? "User"; 

    <div class="dropdown ms-3">
        <a class="dropdown-toggle d-flex align-items-center" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            <img src="@avatarUrl" alt="Avatar" class="rounded-circle" width="40" height="40">
            <span class="ms-2 text-white">Hello @userName</span>
        </a>
        <ul class="dropdown-menu dropdown-menu-end">
            <li>
                <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage/Index">
                    <i class="bi bi-person me-2"></i>Account
                </a>
            </li>
            <li>
                <a class="dropdown-item" asp-controller="Messages" asp-action="Index">
                    <i class="bi bi-envelope me-2"></i>Message
                </a>
            </li>
            <li>
                <a class="dropdown-item" asp-controller="MyCourses" asp-action="Index">
                    <i class="bi bi-journal-bookmark me-2"></i>My Course
                </a>
            </li>
            <li><hr class="dropdown-divider"></li>
            <li>
                <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button type="submit" class="dropdown-item">
                        <i class="bi bi-box-arrow-right me-2"></i>Logout
                    </button>
                </form>
            </li>
        </ul>

    </div>
}
else
{
    <a class="btn-getstarted ms-3" asp-area="Identity" asp-page="/Account/Login">Enroll Now</a>
}
